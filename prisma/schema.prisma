generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Artikli {
  id      String   @id @default(uuid())
  naziv   String?
  cijena  Int?
  detalji Detalji?
}

model Detalji {
  id        String   @id @default(uuid())
  opis      String?
  artikliId String   @unique
  artikli   Artikli  @relation(fields: [artikliId], references: [id], onDelete: Cascade)
}
